{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "standard",
        "prettier",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended"      
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": ["jest", "react","jsx-a11y"],
    "rules": {
        "complexity": "error",
        "require-await": "error",
        "yoda": "error",
        "no-shadow": "error",
        "no-use-before-define": "error",
        "no-undef-init": "error",
        "no-var": "error",
        "prefer-arrow-callback": [ "error", { "allowNamedFunctions": true } ] 
    },
    "settings": {
        "react":{
            "version": "detect"
        }
    }
}
